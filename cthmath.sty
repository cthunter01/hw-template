%%%%%%%%%Regular Derivatives%%%%%%%%%%%
\newcommand{\rd}{\mathrm{d}} %the singular Regular Differential
\newcommand{\rdf}[3][\!]{\frac{\rd^{#1} #2}{\rd #3^{#1}}} %Regular derivative
\newcommand{\rdfb}[2][]{\frac{\rd^{#1}}{\rd #2^{#1}}}  %Regular
                                %derivative No function is required
                                %(Blank) 

%%%%%%%%%Partial Derivatives%%p%%%%%%%%%
\newcommand{\pd}{\partial} %the Partial Differential
\newcommand{\pdf}[3][\!]{\frac{\pd^{#1} #2}{\pd #3^{#1}}} %Partial derivative
\newcommand{\pdfb}[2][]{\frac{\pd^{#1}}{\pd #2^{#1}}} %Partial
                                %derivative no function required (Blank)

%%%%%%%%%Functional Derivatives%%%%%%%%
\newcommand{\fd}{\delta\!} %Fixes spacing with garamond font
\newcommand{\fdf}[3][\!]{\frac{\fd^{#1} #2}{\fd #3^{#1}}} %Functional
                                %derivative 
\newcommand{\fdfb}[2][]{\frac{\fd^{#1}}{\fd #2^{#1}}} % Functional
                                % derivative, no function required
                                % (Blank) 

